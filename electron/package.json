{
  "name": "serverscout",
  "version": "1.2.1",
  "description": "Server Inventory Management Tool - Developed by Fatih Tunahan Sakin",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "build:all": "npm run build:portable && npm run build:win"
  },
  "author": {
    "name": "Fatih Tunahan Sakin",
    "url": "https://github.com/serverwhisperer"
  },
  "homepage": "https://github.com/serverwhisperer/ServerSpy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fatihtunahans.serverscout",
    "productName": "ServerScout",
    "copyright": "Copyright Â© 2025 Fatih Tunahan Sakin",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Fatih Tunahan Sakin",
      "legalTrademarks": "ServerScout by Fatih Tunahan Sakin"
    },
    "nsis": {
      "artifactName": "ServerScout-Setup-${version}.exe",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ServerScout",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "ServerScout-Portable-${version}.exe",
      "requestExecutionLevel": "user"
    },
    "extraResources": [
      {
        "from": "../backend/dist/serverscout-backend.exe",
        "to": "backend/serverscout-backend.exe"
      },
      {
        "from": "../frontend",
        "to": "frontend",
        "filter": ["**/*"]
      }
    ],
    "files": [
      "main.js",
      "package.json"
    ],
    "asar": false
  }
}
